{
    "name": "Gmail Attachments To Docs",
    "version": "1.0.1",
    "description": "Save those pesky Gmail attachments directly to Google Docs from the attachment list itself with a newly added Save To Docs link.",
    "icons": {
      "128": "img/icon128.png",
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png"
   },
    "permissions": [
        "tabs",
        "http://mail.google.com/*",
        "https://mail.google.com/",
        "http://*/"
    ],
    "content_scripts": [
        {
            "matches" : ["*://mail.google.com/*"],
            "js": ["js/lib/bootstrap.js"],
            "run_at": "document_end"
        }
    ]
}