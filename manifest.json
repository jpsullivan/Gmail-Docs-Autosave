{
    "name": "Gmail Attachments To Drive",
    "version": "1.3.3",
    "description": "Save those pesky Gmail attachments directly to Google Drive from the attachment list itself with a newly added Save To Drive link.",
    "icons": {
      "128": "img/icon128.png",
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png"
   },
    "permissions": [
        "tabs",
        "*://mail.google.com/*"
    ],
    "content_scripts": [
        {
            "matches" : ["*://mail.google.com/*"],
            "js": ["js/lib/yepnope-1.5.3-min.js","js/lib/bootstrap.js"],
            "run_at": "document_end"
        }
    ]
}